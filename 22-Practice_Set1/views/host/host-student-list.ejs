<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="w-full flex flex-col items-center justify-center mt-10 px-4">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-7xl">
      <h1 class="text-3xl font-bold text-center text-blue-700 mb-8">Host Student Registered List</h1>

      <% registeredStudents.forEach(student => { %>
      <div class="bg-slate-200 rounded-xl shadow-md p-4 mb-6 flex flex-col md:flex-row md:items-start gap-6 hover:shadow-lg transition-shadow duration-300">
        <!-- Left: Photo & Button -->
        <div class="flex flex-col items-center md:w-[180px] gap-3">
          <img class="w-[120px] h-[120px] object-cover rounded-full border-4 border-white shadow-md" src="<%= student.StudentPhotoUrl %>" alt="<%= student.StudentName %>">
          <a class="bg-blue-600 text-white py-1 px-3 rounded-lg text-sm hover:bg-blue-800 transition duration-300" href="/host-student-details/<%= student.id %>">More Details</a>
         
        </div>

        <!-- Right: Student Info -->
        <div class="flex-1 space-y-2">
          <div>
            <span class="font-semibold text-gray-800">Student Name:</span>
            <span class="text-gray-700"><%= student.StudentName %></span>
          </div>
          <div>
            <span class="font-semibold text-gray-800">Enrollment No:</span>
            <span class="text-gray-700"><%= student.StudentEnroll %></span>
          </div>
          <div>
            <span class="font-semibold text-gray-800">Session:</span>
            <span class="text-gray-700"><%= student.StudentStartSession %></span>
            <span class="text-gray-700">-</span>
            <span class="text-gray-700"><%= student.StudentEndSession %></span>
          </div>
          <div>
            <span class="font-semibold text-gray-800">Contact:</span>
            <span class="text-gray-700"><%= student.StudentNumber %></span>
          </div>
          <div>
            <span class="font-semibold text-gray-800">Date of Birth:</span>
            <span class="text-gray-700"><%= student.StudentDOB %></span>
          </div>
        </div>
      </div>
      <% }) %>

      <% if (registeredStudents.length === 0) { %>
      <p class="text-center text-gray-500 mt-6">No students registered yet.</p>
      
      <% } %>
    </div>
  </main>
</body>
</html>
