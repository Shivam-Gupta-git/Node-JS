<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <div class="">
    <div class="p-6">
      <h1 class="text-3xl font-bold">Pictures List</h1>
     </div>
<div class="flex flex-row">
  <% addedPictures.forEach(picture => { %>
   <div class="w-[90%] max-w-sm  bg-white/70 backdrop-blur-md border border-slate-200 rounded-3xl shadow-2xl overflow-hidden ml-6">
     <!-- Image -->
     <img src="<%= picture.picture %>" alt="Uploaded Picture"
          class="w-full h-64 object-cover rounded-t-3xl">
 
     <!-- Content -->
     <div class="p-6">
       <h2 class="text-2xl font-bold text-slate-800 mb-2"><%= picture.pictureName %></h2>
       <p class="text-slate-600 mb-4">
         <%= picture.description %>
       </p>
       
       <!-- Optional Action Button -->
       <div class="flex justify-end gap-5">
          <a class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-4 py-2 rounded-xl shadow-md hover:shadow-xl transition" href="/edit-pictures/<%= picture.id %>?editing=true">Edit</a>
          <form action="/delete-picture/<%= picture.id %>" method="POST">
            <button type="submit" 
              class="bg-gradient-to-r from-red-600 to-pink-500 hover:from-red-700 hover:to-pink-600 text-white px-4 py-2 rounded-xl shadow-md hover:shadow-xl transition">
              Delete
            </button>
          </form>
       </div>
     </div>
 
   </div>
  <% }) %>

</div>
  </div>
</body>
</html>