

<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-blue-50 via-white to-purple-100 min-h-screen font-sans">
  <%- include('../partials/nav') %>

  <main class="flex items-center justify-center py-12 px-4">
    <form action="<%= editing ? '/edit-homes' : '/showMessage-page' %>" method="POST"
          class="w-full max-w-2xl bg-white/70 backdrop-blur-md shadow-2xl rounded-3xl overflow-hidden border border-blue-200 px-8 py-10 flex flex-col items-center space-y-5">

      <h1 class="text-3xl font-bold text-gray-800 mb-2 tracking-wide">
        <%= editing ? 'Edit' : 'Register' %> Your Home on <span class="text-purple-600">AiRBnB</span>
      </h1>

      <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">

      <input type="text" name="houseName" placeholder="Enter Your House Name" required
             class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
             value="<%= editing ? home.houseName : '' %>">

      <input type="text" name="price" placeholder="Price Per Night" required
             class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
             value="<%= editing ? home.price : '' %>">

      <input type="text" name="location" placeholder="Location" required
             class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
             value="<%= editing ? home.location : '' %>">

      <input type="text" name="rating" placeholder="Rating" required
             class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
             value="<%= editing ? home.rating : '' %>">

      <input type="text" name="photoUrl" placeholder="Enter Photo URL" required
             class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
             value="<%= editing ? home.photoUrl : '' %>">

      <textarea type="text" rows="6" name="description" placeholder="Describe your home " required
             class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
             ><%= editing ? home.description : '' %></textarea>


      <input type="submit" value="<%= editing ? 'Update Home' : 'Add Home' %>"
             class="w-full bg-purple-600 text-white font-semibold py-2 rounded-xl hover:bg-purple-700 transition duration-300 ease-in-out cursor-pointer mt-4">

    </form>
  </main>
</body>
</html>