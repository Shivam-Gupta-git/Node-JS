<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
 <div class="bg-gradient-to-br from-blue-100 to-purple-200 min-h-screen flex items-center justify-center">
   <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md">
     <h2 class="text-3xl font-bold text-center text-blue-600 mb-6">Login</h2>
 
     <form action="/login" method="POST" class="space-y-5">
       <!-- Username or Email -->
       <div>
         <label class="block mb-1 text-gray-700 font-medium">Username or Email</label>
         <input type="text" name="username" required
           class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400">
       </div>
 
       <!-- Password -->
       <div>
         <label class="block mb-1 text-gray-700 font-medium">Password</label>
         <input type="password" name="password" required
           class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400">
       </div>
 
       <!-- Login Button -->
       <button type="submit"
         class="w-full bg-blue-600 text-white py-2 rounded-xl hover:bg-blue-700 transition">Login</button>
     </form>
   </div>

 </div>

</body>
</html>