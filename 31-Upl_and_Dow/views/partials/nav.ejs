<header class="w-full bg-white/80 backdrop-blur-md shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-[70px]">

      <!-- Logo -->
      <div class="flex-shrink-0 text-purple-700 font-extrabold text-2xl tracking-wide">
        <a href="/">AiRBnB</a>
      </div>

      <!-- Navigation Links -->
      <nav class="hidden md:flex gap-8">
        <a class="<%= currentPage === 'Home' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
          href="/">Home</a>

      <% if(isLoggedIn) { %>
        <% if(user && user.userType === 'guest'){ %>
          
          <a class="<%= currentPage === 'Home List' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
            href="/homelist">Homes List</a>
  
          <a class="<%= currentPage === 'bookings' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
            href="/bookings">Bookings</a>
  
          <a class="<%= currentPage === 'favourites' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
            href="/favourites">Favourites</a>
            
       <% } else{ %>

        <a class="<%= currentPage === 'Host Home List' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
          href="/host-home-list">Host Home</a>
   
        <a class="<%= currentPage === 'Add Home' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
          href="/add-home-page">Add Home</a>

     <%  } %>
      <% } %>

      <% if(!isLoggedIn){ %>
        <a class="<%= currentPage === 'SignUp' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
          href="/signup">Signup</a>
        <a class="<%= currentPage === 'Login' ? 'bg-purple-100 text-purple-700' : 'hover:bg-purple-100 hover:text-purple-700' %> text-gray-700 transition px-4 py-2 rounded-xl font-medium"
          href="/login">Login</a>
      <% } else { %>
        <form action="/logout" method="POST">
          <button type="submit"
            class="hover:bg-purple-100 hover:text-purple-700 text-gray-700 transition px-4 py-2 rounded-xl font-medium">
            Logout
          </button>
        </form>
      <% } %>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button class="text-purple-700 focus:outline-none" aria-label="Open Menu">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>

    </div>
  </div>
</header>