  <div class="<%= currentPage === 'Login' ? 'w-[70%]' : 'w-[100%]' %> bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative " role="alert">
   <strong class="font-bold text-xl">Error !</strong>
   <span class="block sm:inline ">
     <% errors.forEach(error => { %>
         <li class="ml-3 mt-2"><%= error %></li>
  <% })  %>
 </span>
  </div>
<% } %>