<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class=" w-[100%] flex items-center justify-center flex-col">
    <div class="w-[100%] flex items-center justify-center">
      <h1 class=" font-bold text-red-600 mt-5 text-3xl">Here are our Homes Details Page</h1>
    </div>
    <div class="max-w-5xl mx-auto mt-10 bg-white rounded-2xl shadow-lg p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        <!-- Image Section -->
        <img class="w-full h-96 object-cover rounded-xl" src="<%= home.photo %>" alt="<%= home.houseName %>">
  
        <!-- Details Section -->
        <div class="flex flex-col justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-800">House Name</h1>
            <p class="text-gray-600 text-xl mb-2"><%= home.houseName %></p><hr>
            <h1 class="text-2xl font-bold text-gray-800 mt-2">Location</h1>
            <p class="text-gray-600 mb-4">üìç <%= home.location %></p><hr>
            <h1 class="text-2xl font-bold text-gray-800 mt-2">Description</h1>
            <p class="text-gray-700 mb-6">
              <%= home.description %>
            </p>
  
            <div class="flex items-center gap-4 mb-4">
              <span class="text-green-600 font-semibold text-xl">‚Çπ<%= home.price %>/night</span>
              <span class="text-yellow-500 font-medium text-lg flex items-center">‚≠ê <%= home.rating %></span>
            </div>
          </div>
  
          <!-- Buttons -->
          <div class="flex gap-4 mt-6">
            <%- include('../partials/favourite') %>
            <a href="index.html" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-5 py-2 rounded-lg transition">Back to Listings</a>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>