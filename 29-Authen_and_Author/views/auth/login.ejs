<%- include('../partials/head') %>
</head>
<body lass="bg-gradient-to-br from-blue-50 via-white to-purple-100 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <main class="flex flex-col items-center justify-center py-12 px-4">

    <form  action="/login" method="POST" class="w-full max-w-2xl bg-white/70 backdrop-blur-md shadow-2xl rounded-3xl overflow-hidden border border-blue-200 px-8 py-10 flex flex-col items-center space-y-5" >
      <h1 class="text-3xl font-bold text-gray-800 mb-2 tracking-wide">Login with your info</h1>
      <%- include('../partials/errors') %>
      <input 
      type="email" 
      name="email" 
      value=" <%= oldInput.email ? oldInput.email : '' %> "
      placeholder="Email"
      class="w-[70%] px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
      required>

      <input 
      type="password"
      name="userPassword"
      placeholder="Enter Your password"
      class="w-[70%] px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400"
      required>

      <input type="submit" value="Sing In"
      class="w-[70%] bg-purple-600 text-white font-semibold py-2 rounded-xl hover:bg-purple-700 transition duration-300 ease-in-out cursor-pointer mt-4">
    </form>
   
  </main>
</body>
</html>