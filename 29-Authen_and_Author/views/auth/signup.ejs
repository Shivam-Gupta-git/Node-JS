

<%- include('../partials/head') %>
</head>
<body class="">
  <%- include('../partials/nav') %>

  <div class="bg-gradient-to-br from-indigo-100 via-white to-purple-100 min-h-screen flex items-center justify-center">
  <div class="w-[50%] bg-white shadow-xl rounded-3xl px-8 py-10 backdrop-blur-md border border-gray-200">
    <h1 class="text-3xl font-bold text-center text-purple-700 mb-3">Create Account</h1>
    <p class="text-center text-gray-500 mb-8">Join us to explore and enjoy the services.</p>

    <form action="/signup" method="POST" class="space-y-5">

      <%- include('../partials/errors') %>
      <!-- Name -->
      <div class="flex gap-3">
        <input 
        type="text" 
        name="firstName" 
        value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
        placeholder="First Name"
        class="w-1/2 px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none"
        required>

        <input 
        type="text" 
        name="lastName" 
        value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
        placeholder="Last Name"
        class="w-1/2 px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none">
      </div>

      <!-- Email -->
      <input 
      type="email" 
      name="email" 
      value="<%= oldInput.email ? oldInput.email : '' %>"
      placeholder="Email"
      class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none"
      required>

      <!-- Password -->
      <input 
      type="password" 
      name="userPassword" 
      placeholder="Password"
      class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none"
      required>

      <input 
      type="password" 
      name="userConfirmPassword" 
      placeholder="Confirm Password"
      class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:outline-none"
      required>

      <!-- User Type -->
      <div>
        <p class="text-sm font-medium text-gray-700 mb-1">User Type</p>
        <div class="flex items-center gap-5">
          <label class="flex items-center gap-2">

            <input 
            type="radio" 
            name="userType" 
            value="guest" 
            class="accent-purple-600" 
            checked="<%= oldInput.userType === "guest" %>" />
            <span>Guest</span>

          </label>
          <label class="flex items-center gap-2">
            <input 
            type="radio" 
            name="userType" 
            value="host" 
            class="accent-purple-600"
            checked="<%= oldInput.userType === "host" %>" />
            <span>Host</span>
          </label>
        </div>
      </div>

      <!-- Terms -->
      <div class="flex items-start gap-2">
        <input type="checkbox" name="terms" id="terms" class="accent-purple-600 mt-1" required>
        <label for="terms" class="text-sm text-gray-600">
          I agree to the <a href="#" class="text-purple-600 underline hover:text-purple-800">terms & conditions</a>
        </label>
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 rounded-xl transition-all duration-300">
        Sign Up
      </button>
    </form>

    <p class="text-center text-sm text-gray-600 mt-6">
      Already have an account? 
      <a href="/login" class="text-purple-600 hover:underline hover:text-purple-800">Login here</a>
    </p>
  </div>
</div>
</body>
</html>