<%- include('../partials/head') %>
<body class="bg-gradient-to-br from-blue-50 via-white to-purple-100 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <main class="flex items-center justify-center py-12 px-4">

    <form action=" <%= editing ? '/update-student-details' : '/added-student' %>" method="POST" class="w-full max-w-2xl bg-white/70 backdrop-blur-md shadow-2xl rounded-3xl overflow-hidden border border-blue-200 px-8 py-10 flex flex-col items-center space-y-5">
      <h1 class="text-3xl font-bold text-gray-800 mb-2 tracking-wide"><%= editing ? 'Edit Student Details' : 'Add Student Details' %></h1>

      <input type="hidden" name="id" value="<%= editing ? student.id : '' %>">
      
      <input class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400" type="text" placeholder="Enter Your Name" name="studentName" required value="<%= editing ? student.studentName : '' %>">
      <input  class="w-full bg-purple-600 text-white font-semibold py-2 rounded-xl hover:bg-purple-500 transition duration-300 ease-in-out cursor-pointer mt-4" type="submit" value="<%= editing ? 'Update Details' : 'Add Details' %>">
    </form>
  </main>
</body>
</html>