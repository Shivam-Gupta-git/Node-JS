

<header class="w-full bg-slate-600/80 backdrop-blur-sm shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-[60px]">
      
      <!-- Brand / Logo -->
      <div class="flex-shrink-0 text-white font-bold text-xl tracking-wide">
        <a href="/">AiRBnB</a>
      </div>

      <!-- Nav Links -->
      <nav class="hidden md:flex gap-6">
        <a class="<%= currentPage === 'Home' ? 'bg-gray-400 text-black' : 'hover:bg-gray-400' %> text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg"
          href="/">Homes</a>
          
      <% if(isLoggedIn) { %>

        <a class="<%= currentPage === 'Home List' ? 'bg-gray-400 text-black' : 'hover:bg-gray-400' %> text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg"
           href="/homelist">Homes List</a>

        <a class="<%= currentPage === 'bookings' ? 'bg-gray-400 text-black' : 'hover:bg-gray-400' %> text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg"
           href="/bookings">Bookings</a>

        <a class="<%= currentPage === 'favourites' ? 'bg-gray-400 text-black' : 'hover:bg-gray-400' %> text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg"
           href="/favourites">Favourites</a>

        <a class="<%= currentPage === 'Host Home List' ? 'bg-gray-400 text-black' : 'hover:bg-gray-400' %> text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg"
           href="/host-home-list">Host Home</a>

        <a class="<%= currentPage === 'Add Home' ? 'bg-gray-400 text-black' : 'hover:bg-gray-400' %> text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg"
           href="/add-home-page">Add Home</a>

   <% } %>
   <% if(!isLoggedIn){ %>
    <a class=" text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg hover:bg-gray-400" href="/login">Login</a>
   <% } else{ %>
    <form action="/logout" method="POST">
      <button type="submit" class=" text-white hover:text-black transition duration-300 px-3 py-1.5 rounded-lg hover:bg-gray-400">Logout</button>
    </form>
   <% } %>

      </nav>

      <!-- Optional: Hamburger for Mobile -->
      <div class="md:hidden text-white">
        <!-- If using JS: toggle a mobile menu here -->
        <button class="focus:outline-none" aria-label="Open Menu">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2"
               viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>

    </div>
  </div>
</header>