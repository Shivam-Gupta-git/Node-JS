<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class=" w-[100%] flex items-center justify-center flex-col">
    <div class="w-[100%] flex items-center justify-center mt-5">
      <h1 class=" text-4xl font-extrabold text-gray-800 mb-5 text-center drop-shadow-md">Hey Host! Here are your Homes</h1>
    </div>
    
    <div class="w-full mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-5">
      <% registrationHome.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <img class="w-full h-48 object-cover" src="<%= home.photoUrl %>" alt="<%= home.houseName %>">
          <div class="p-4">
            <h2 class="text-xl font-bold text-gray-800"><%= home.houseName %></h2>
            <p class="text-gray-600 text-sm mb-1">üìç <%= home.location %></p>
            <div class="flex justify-between items-center mt-3">
              <span class="text-green-600 font-semibold text-lg">‚Çπ<%= home.price %>/night</span>
              <span class="text-yellow-500 font-medium flex items-center">‚≠ê <%= home.rating %></span>
            </div>
            <div class="flex flex-row gap-3">
              <a class="bg-blue-500 p-1 w-[80px] mt-3 rounded text-white text-center" href="/host/addHomes/<%= home.id %>?editing=true">Edit</a>
              <form action="/host/delete-home/<%= home.id %>" method="POST">
                <button type="submit" class="bg-red-500 p-1 w-[80px] mt-3 rounded text-white ">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>