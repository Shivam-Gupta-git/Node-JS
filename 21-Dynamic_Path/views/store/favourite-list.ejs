<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class=" w-[100%] flex items-center justify-center flex-col">
    <div class="w-[100%] flex items-center justify-center mt-5">
      <h1 class="text-4xl font-extrabold text-gray-800 mb-5 text-center drop-shadow-md">🏡 Here are our Favourite homes</h1>
    </div>
    
    <div class="w-full mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-5">
      <% favouriteHome.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <img class="w-full h-48 object-cover" src="<%= home.photoUrl %>" alt="<%= home.houseName %>">
          <div class="p-4">
            <h2 class="text-xl font-bold text-gray-800"><%= home.houseName %></h2>
            <p class="text-gray-600 text-sm mb-1">📍 <%= home.location %></p>
            <div class="flex justify-between items-center mt-3">
              <span class="text-green-600 font-semibold text-lg">₹<%= home.price %>/night</span>
              <span class="text-yellow-500 font-medium flex items-center">⭐ <%= home.rating %></span>
            </div>
            <div class="mt-2 flex flex-row gap-5 items-center">
              <a class="bg-pink-400 hover:bg-pink-500 p-2  rounded text-white transition" href="/homelist/<%= home.id %>">Details</a>
            <form action="/remove-to-favourite/<%= home.id %>" method="Post">
              <button class="bg-blue-400 hover:bg-blue-500 p-2  rounded text-white transition" type="submit">Remove</button>
            </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>